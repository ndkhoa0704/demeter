@{
    ViewData["Title"] = "Home Page";
}

<div class="grid-container" style="display: grid; grid-template-rows: 300px 150px 300px; width: 80%; gap: 15px; margin-top: 15px; margin-left: 10%">
    <div class="item1" style="grid-area: 1/1/1/1">
        <div style="height: 50%; margin-bottom: 8px; background-image: url(https://www.wkbn.com/wp-content/uploads/sites/48/2021/03/clouds-cloudy-sky-spring-summer-fall-winter-weather-generic-8-1.jpg?w=1280); border: none;border-radius: 2px;box-shadow: 0 0px 10px 0 rgba(70, 76, 79, .2); ">
            <div style="height: 20%; background-color: #4CAF50; border: none;border-radius: 2px;box-shadow: 0 0px 10px 0 rgba(70, 76, 79, .2);">
                <p id="location" onclick="clickLocation()" style="font-weight:bold; font-size:20px; text-align: center"></p>
            </div>
            <div class="row" style="height: 65%; margin-left: 15px">
                <div id="temperature" style="width: 20%; margin-left: 5%; margin-right:15%; font-weight:bold; font-size:65px; text-align:center"></div>
                <div class="col" style="width: 5%; margin-top: 20px">
                    <div id="wind" style="height:50%; font-weight:bold; font-size:15px"></div>
                    <div id="humidity" style="height:50%; font-weight:bold; font-size:15px"></div>
                </div>
                <div class="col" style="width: 5%; margin-top: 20px">
                    <div id="pressure" style="height:50%; font-weight:bold; font-size:15px"></div>
                    <div id="time" style="height:50%; font-weight:bold; font-size:15px"></div>
                </div>
            </div>
        </div>
        <div class="row" style="height: 50%; width: 100%; margin-left: 0px">
            <div style="width: 19.68%; background-color: white; border: none;border-radius: 2px;box-shadow: 0 0px 10px 0 rgba(70, 76, 79, .2); margin: 1px">
                <div id="date1" style="height:18%; text-align:center; background-color: #4CAF50; font-weight:bold"></div>
                <div id="mean1" style="height:60%; text-align:center; font-weight:bold; font-size:50px"> </div>
